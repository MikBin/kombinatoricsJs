{
    "notes": "module was set to es2015 have been set to commonjs to make import work in ava-ts for tests",
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}